{
  "extends": ["config:base"],
  "baseBranches": ["main"],
  "dependencies": {
    "semanticPrefix": "chore:",
    "semanticCommitScope": ""
  },
  "pin": {
    "semanticPrefix": "chore:",
    "semanticCommitScope": ""
  },
  "semanticPrefix": "chore:",
  "semanticCommitScope": "",
  "packageRules": [
    {
      "packagePatterns": ["^@babel/"],
      "groupName": "Babel packages",
      "automerge": true
    },
    {
      "packagePatterns": ["^eslint"],
      "groupName": "ESlint packages",
      "automerge": true
    },
    {
      "packagePatterns": ["^stylelint"],
      "groupName": "StyleLint packages",
      "automerge": true
    },
    {
      "packageNames": [
        "babel-jest",
        "babel-plugin-styled-components",
        "jest",
        "prettier",
        "react-test-renderer"
      ],
      "automerge": true
    }
  ]
}
