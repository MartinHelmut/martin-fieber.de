{
  "name": "martin-fieber.de",
  "version": "1.0.0",
  "description": "My personal website.",
  "private": true,
  "scripts": {
    "start": "next start",
    "build": "next build && next export -o public",
    "dev": "next",
    "test": "jest",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "lint": "eslint '**/*.js' && stylelint '**/*.css'",
    "fmt:check": "prettier --list-different \"**/*.{js,css,md,json}\"",
    "prerelease": "npm run fmt:check && npm run lint && npm test",
    "release": "standard-version -a"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MartinHelmut/martin-fieber.de.git"
  },
  "keywords": [
    "website",
    "portfolio",
    "martin",
    "helmut",
    "fieber"
  ],
  "author": "Martin Helmut Fieber <info@martin-fieber.de> (https://martin-fieber.de)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MartinHelmut/martin-fieber.de/issues"
  },
  "homepage": "https://martin-fieber.de/",
  "dependencies": {
    "@zeit/next-css": "0.2.0",
    "classnames": "2.2.5",
    "next": "6.0.3",
    "react": "16.4.0",
    "react-dom": "16.4.0"
  },
  "devDependencies": {
    "babel-jest": "23.0.1",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "commitizen": "2.10.1",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "4.19.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.8.2",
    "husky": "0.14.3",
    "jest": "23.1.0",
    "lint-staged": "7.1.2",
    "prettier": "1.13.3",
    "react-test-renderer": "16.4.0",
    "standard-version": "4.4.0",
    "stylelint": "9.2.1",
    "stylelint-config-standard": "18.2.0"
  }
}
