{
  "name": "martin-fieber.de",
  "version": "1.0.0",
  "description": "My personal website.",
  "private": true,
  "scripts": {
    "start": "next start",
    "build": "next build && next export -o public",
    "dev": "next",
    "test": "jest",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "lint": "eslint '**/*.js' && stylelint '**/*.css'",
    "fmt:check": "prettier --list-different \"**/*.{js,css,md,json}\"",
    "prerelease": "npm run fmt:check && npm run lint && npm test",
    "release": "standard-version -a"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MartinHelmut/martin-fieber.de.git"
  },
  "keywords": [
    "website",
    "portfolio",
    "martin",
    "helmut",
    "fieber"
  ],
  "author": "Martin Helmut Fieber <info@martin-fieber.de> (https://martin-fieber.de)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MartinHelmut/martin-fieber.de/issues"
  },
  "homepage": "https://martin-fieber.de/",
  "dependencies": {
    "next": "7.0.2",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "styled-components": "4.1.3"
  },
  "devDependencies": {
    "@babel/preset-env": "7.2.3",
    "@babel/preset-react": "7.0.0",
    "babel-jest": "23.6.0",
    "babel-plugin-styled-components": "1.10.0",
    "commitizen": "3.0.5",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "5.11.1",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.11.1",
    "husky": "1.3.0",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "postcss": "7.0.7",
    "prettier": "1.15.3",
    "react-test-renderer": "16.7.0",
    "standard-version": "4.4.0",
    "stylelint": "9.9.0",
    "stylelint-config-prettier": "4.0.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.5.1"
  }
}
