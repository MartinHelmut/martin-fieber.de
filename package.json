{
  "name": "martin-fieber.de",
  "version": "0.1.0",
  "description": "My personal website.",
  "private": true,
  "scripts": {
    "develop": "gatsby develop",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "commit": "node node_modules/@commitlint/prompt-cli/cli.js",
    "commitmsg": "node node_modules/@commitlint/cli/lib/cli.js -e $GIT_PARAMS",
    "precommit": "lint-staged",
    "lint": "eslint --ext .js,.jsx src && stylelint 'src/*.css'",
    "test": "cross-env NODE_ENV=development jest",
    "test:coverage": "cross-env NODE_ENV=development jest --coverage src && cat ./coverage/lcov.info | coveralls",
    "fmt:check": "prettier --tab-width 4 --single-quote --list-different 'src/**/*.{js,jsx}'",
    "clean": "rm -rf public"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MartinHelmut/martin-fieber.de.git"
  },
  "keywords": [
    "website",
    "portfolio",
    "martin",
    "helmut",
    "fieber"
  ],
  "author": "Martin Helmut Fieber <info@martin-fieber.de> (http://martin-fieber.de)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MartinHelmut/martin-fieber.de/issues"
  },
  "homepage": "https://github.com/MartinHelmut/martin-fieber.de#readme",
  "dependencies": {
    "react": "16.2.0",
    "react-dom": "16.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "6.0.2",
    "@commitlint/config-conventional": "6.0.2",
    "@commitlint/prompt-cli": "6.0.2",
    "coveralls": "3.0.0",
    "cross-env": "5.1.3",
    "eslint": "4.15.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.5.1",
    "gatsby": "1.9.155",
    "gatsby-link": "1.6.34",
    "husky": "0.14.3",
    "jest": "22.0.6",
    "lint-staged": "6.0.0",
    "prettier": "1.10.2",
    "stylelint": "8.4.0",
    "stylelint-config-standard": "18.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --tab-width 4 --single-quote",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write --tab-width 4",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "plugins": [
      "react"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "node": true,
      "jest": true,
      "browser": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 4
    }
  }
}
